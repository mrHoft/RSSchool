<div id="modal_login" onclick="this.modalClose(event)">
  <div class="modal_inner">
    <div class="modal_close" onclick="modal_login.style.display='none'">
      <img width="15" height="15" src="./assets/icons/close_modal.svg" />
    </div>
    <h5>Login</h5>
    <form id="form_login" onsubmit="this.formLoginSubmit(event, modal_login)">
      <label>E-mail or readers card<input type="email" name="email" required /></label>
      <label>Password<input type="password" name="password" required /></label>
      <button type="submit" class="small-button">Log In</button>
    </form>
    <p class="modal_info">
      Already have an account?&nbsp;&nbsp;
      <a onclick="modal_login.style.display='none'; modal_register.style.display='flex'"><strong>Register</strong></a>
    </p>
  </div>
</div>
