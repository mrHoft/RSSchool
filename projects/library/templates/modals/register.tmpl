<div id="modal_register" onclick="this.modalClose(event)">
  <div class="modal_inner">
    <div class="modal_close" onclick="modal_register.style.display='none'">
      <img width="15" height="15" src="./assets/icons/close_modal.svg" />
    </div>
    <h5>Register</h5>
    <form id="form_register" onsubmit="this.formRegisterSubmit(event, modal_register)">
      <label>First name<input type="text" name="first_name" onblur="this.formRegisterBlur()" /></label>
      <label>Last name<input type="text" name="last_name" onblur="this.formRegisterBlur()" /></label>
      <label>E-mail<input type="email" name="email" onblur="this.formRegisterBlur()" /></label>
      <label>Password<input type="password" name="password" onblur="this.formRegisterBlur()" /></label>
      <button type="submit" class="small-button">Sign Up</button>
    </form>
    <p class="modal_info">
      Already have an account?&nbsp;&nbsp;
      <a onclick="modal_register.style.display='none'; modal_login.style.display='flex'"><strong>Login</strong></a>
    </p>
  </div>
</div>
